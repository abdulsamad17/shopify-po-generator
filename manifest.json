{
  "manifest_version": 3,
  "name": "Shopify PO Generator",
  "version": "1.0",
  "description": "Download the PO of the Shopify Store in spreadsheet format.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon16.png"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/icon16.png",
        "icons/icon48.png",
        "icons/icon128.png"
      ],
      "matches": ["*://*.shopify.com/*"]
    }
  ]
}
